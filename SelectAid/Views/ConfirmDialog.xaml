<Window x:Class="SelectAid.Views.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="確認" Width="480" Height="320" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="{Binding TitleText}" FontSize="28" FontWeight="Bold" />
        <TextBlock Text="{Binding Message}" TextWrapping="Wrap" Margin="0,12,0,12" />
        <ProgressBar Minimum="0" Maximum="1500" Height="24" Value="{Binding HoldProgress}" />
        <TextBlock Text="長押し(1500ms)で確定" Margin="0,12,0,12" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="確定" PreviewMouseLeftButtonDown="ConfirmDown" PreviewMouseLeftButtonUp="ConfirmUp" />
            <Button Content="キャンセル" Click="Cancel" />
        </StackPanel>
    </StackPanel>
</Window>
