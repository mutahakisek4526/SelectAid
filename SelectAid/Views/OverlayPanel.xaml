<UserControl x:Class="SelectAid.Views.OverlayPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="12">
        <TextBlock Text="PC操作" FontSize="24" FontWeight="Bold" />
        <CheckBox Content="Overlay有効" IsChecked="{Binding PcControl.OverlayEnabled}" />
        <CheckBox Content="MouseGrid有効" IsChecked="{Binding PcControl.MouseGridEnabled}" />
        <WrapPanel>
            <Button Content="Overlay表示" Command="{Binding ShowOverlayCommand}" />
            <Button Content="MouseGrid" Command="{Binding ShowMouseGridCommand}" />
            <Button Content="戻る" Command="{Binding BackCommand}" />
        </WrapPanel>
    </StackPanel>
</UserControl>
