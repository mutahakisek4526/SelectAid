<UserControl x:Class="SelectAid.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="ホーム" FontSize="28" FontWeight="Bold" />
            <WrapPanel>
                <Button Content="AAC" Command="{Binding GoAacCommand}" />
                <Button Content="定型文" Command="{Binding GoPhrasesCommand}" />
                <Button Content="文字盤" Command="{Binding GoLayoutsCommand}" />
                <Button Content="PC操作" Command="{Binding GoOverlayCommand}" />
                <Button Content="設定" Command="{Binding GoSettingsCommand}" />
                <Button Content="支援者" Command="{Binding GoSupporterCommand}" />
                <Button Content="練習" Command="{Binding GoTrainingCommand}" />
                <Button Content="ログ" Command="{Binding GoLogsCommand}" />
                <Button Content="バックアップ" Command="{Binding GoBackupCommand}" />
            </WrapPanel>
            <TextBlock Text="電源/制御" Margin="0,12,0,0" />
            <WrapPanel>
                <Button Content="Sleep" Command="{Binding SleepCommand}" />
                <Button Content="Shutdown" Command="{Binding ShutdownCommand}" />
                <Button Content="Restart" Command="{Binding RestartCommand}" />
                <Button Content="Logoff" Command="{Binding LogoffCommand}" />
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
