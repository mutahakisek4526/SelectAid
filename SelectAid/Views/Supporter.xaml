<UserControl x:Class="SelectAid.Views.Supporter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="12">
        <TextBlock Text="支援者モード" FontSize="24" FontWeight="Bold" />
        <ListBox ItemsSource="{Binding Profiles}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedProfile}" Height="200" />
        <WrapPanel>
            <Button Content="追加" Command="{Binding AddProfileCommand}" />
            <Button Content="このプロファイルを使用" Command="{Binding SetActiveCommand}" />
            <Button Content="戻る" Command="{Binding BackCommand}" />
        </WrapPanel>
    </StackPanel>
</UserControl>
