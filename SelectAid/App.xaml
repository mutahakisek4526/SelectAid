<Application x:Class="SelectAid.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:SelectAid.Views"
             xmlns:viewModels="clr-namespace:SelectAid.ViewModels"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="Theme/Base.xaml" />
            <ResourceDictionary Source="Theme/Friendly.xaml" />
        </ResourceDictionary.MergedDictionaries>
        <DataTemplate DataType="{x:Type viewModels:HomeViewModel}">
            <views:Home />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:AacViewModel}">
            <views:AAC />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:PhrasesViewModel}">
            <views:Phrases />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:KeyboardLayoutsViewModel}">
            <views:KeyboardLayouts />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:OverlayPanelViewModel}">
            <views:OverlayPanel />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:SettingsViewModel}">
            <views:Settings />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:SupporterViewModel}">
            <views:Supporter />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:TrainingViewModel}">
            <views:Training />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:LogsViewModel}">
            <views:Logs />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:BackupRestoreViewModel}">
            <views:BackupRestore />
        </DataTemplate>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="32" />
            <Setter Property="Margin" Value="12" />
            <Setter Property="Padding" Value="{StaticResource ControlPadding}" />
            <Setter Property="MinHeight" Value="80" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="28" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        </Style>
        <SolidColorBrush x:Key="HighlightBrush" Color="{StaticResource AccentColor}" />
    </Application.Resources>
</Application>
