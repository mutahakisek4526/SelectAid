<Window x:Class="SelectAid.Overlay.MouseGridWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MouseGrid" WindowStyle="None" WindowState="Maximized" Topmost="True" Background="#22000000">
    <Grid>
        <Canvas x:Name="GridCanvas" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,24">
            <Button Content="LeftClick" Click="LeftClick" />
            <Button Content="RightClick" Click="RightClick" />
            <Button Content="戻る" Click="Back" />
            <Button Content="終了" Click="Close" />
        </StackPanel>
    </Grid>
</Window>
