<Window x:Class="SelectAid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:SelectAid.Views"
        Title="SelectAid" Width="1280" Height="800"
        Background="{StaticResource BackgroundBrush}">
    <DockPanel>
        <Border Background="{StaticResource PrimaryBrush}" DockPanel.Dock="Top" Padding="12">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="SelectAid" Foreground="White" FontSize="28" FontWeight="Bold" />
                    <TextBlock Text="  |  " Foreground="White" />
                    <TextBlock Text="{Binding Breadcrumb}" Foreground="White" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Input:" Foreground="White" />
                    <TextBlock Text="{Binding CurrentProfile.InputMode}" Foreground="White" Margin="6,0,12,0" />
                    <TextBlock Text="Scan:" Foreground="White" />
                    <TextBlock Text="{Binding ScanStatus}" Foreground="White" Margin="6,0,12,0" />
                    <TextBlock Text="Pause:" Foreground="White" />
                    <TextBlock Text="{Binding IsPaused}" Foreground="White" Margin="6,0,12,0" />
                    <TextBlock Text="Lock:" Foreground="White" />
                    <TextBlock Text="{Binding IsCareLocked}" Foreground="White" Margin="6,0,12,0" />
                </StackPanel>
            </StackPanel>
        </Border>
        <Border DockPanel.Dock="Bottom" Background="{StaticResource SurfaceBrush}" Padding="12">
            <DockPanel>
                <TextBlock Text="{Binding StatusMessage}" DockPanel.Dock="Left" VerticalAlignment="Center" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Home" Command="{Binding HomeCommand}" />
                    <Button Content="Back" Command="{Binding BackCommand}" />
                    <Button Content="Undo" Command="{Binding UndoCommand}" />
                    <Button Content="Pause" Command="{Binding PauseCommand}" />
                    <Button Content="Buzzer" Command="{Binding BuzzerCommand}" />
                    <Button Content="PC" Command="{Binding OverlayCommand}" />
                </StackPanel>
            </DockPanel>
        </Border>
        <ContentControl Content="{Binding CurrentView}" />
    </DockPanel>
</Window>
