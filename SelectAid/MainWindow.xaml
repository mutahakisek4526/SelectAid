<Window x:Class="SelectAid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:SelectAid.Views"
        Title="SelectAid" Width="1280" Height="800">
    <DockPanel>
        <Border Background="#2D7FFF" DockPanel.Dock="Top" Padding="8">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="SelectAid" Foreground="White" FontSize="22" FontWeight="Bold" />
                <TextBlock Text="  |  入力モード: " Foreground="White" Margin="12,0,0,0" />
                <TextBlock Text="{Binding CurrentProfile.InputMode}" Foreground="White" />
                <TextBlock Text="  |  Pause: " Foreground="White" Margin="12,0,0,0" />
                <TextBlock Text="{Binding IsPaused}" Foreground="White" />
            </StackPanel>
        </Border>
        <ContentControl Content="{Binding CurrentView}" />
    </DockPanel>
</Window>
